{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/snowpack/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/snowpack",
        "main": "packages/snowpack/src/index.ts",
        "tsConfig": "packages/snowpack/tsconfig.lib.json",
        "assets": [
          "packages/snowpack/*.md",
          {
            "input": "./packages/snowpack/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/snowpack/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/snowpack",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/snowpack",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/snowpack/**/*.ts",
          "packages/snowpack/generators.json",
          "packages/snowpack/executors.json",
          "packages/snowpack/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/snowpack"],
      "options": {
        "jestConfig": "packages/snowpack/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
